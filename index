  <h1>Galeria de Gatinhos üê±</h1>
  <button onclick="carregarGatinho()">Mostrar outro gatinho</button>

  <div id="cat-container">
    <p>Clique no bot√£o para ver um gatinho!</p>
  </div>

  <script>
    async function carregarGatinho() {
      const container = document.getElementById('cat-container');
      container.innerHTML = "<p>Carregando...</p>";

      try {
        const resposta = await fetch('https://api.thecatapi.com/v1/images/search');
        const dados = await resposta.json();
        const imagemUrl = dados[0].url;

        container.innerHTML = `<img src="${imagemUrl}" alt="Imagem de gatinho">`;
      } catch (erro) {
        container.innerHTML = "<p>Erro ao carregar gatinho üòø</p>";
      }
    }
  </script>

</body>
